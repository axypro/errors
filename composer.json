{
    "name": "axy/errors",
    "type": "library",
    "description": "Exceptions in PHP",
    "keywords": [
        "Exception",
        "Error"
    ],
    "homepage": "https://github.com/axypro/errors",
    "license": "MIT",
    "authors": [
        {
            "name": "Oleg Grigoriev",
            "email": "go.vasac@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "axy/backtrace": "~3.0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~10.0.15",
        "squizlabs/php_codesniffer": "=3.7.1"
    },
    "autoload": {
        "psr-4": {
            "axy\\errors\\": "src",
            "axy\\errors\\tests\\": "tests"
        }
    },
    "archive": {
        "exclude": [
            "/tests/*",
            "/devops/*",
            "/doc/*",
            "/*.sh",
            "/*.xml.dist",
            "/CHANGELOG.md"
        ]
    }
}
